<h1>Rumus Diagonal persegi panjang</h1>
  
 <form name="kalkulator">
   		
        <tr>panjang <td>:</td><input type="number" name="yasid1"><br /></tr><tr></tr>
        lebar<td>:</td> <input type="number" name="yasid2"><br />
        Hasil<td>:</td><input type="number" name="hasil" disabled="true">
        <input type="button" value="Hasil" onClick="persegi()">
        <input type="button" value="Kosongkan" onClick="kosong()">
  </form>
    

        <script type="text/JavaScript">
            function persegi()
            {
                a=eval(kalkulator.yasid1.value);
                b=eval(kalkulator.yasid2.value);
                c=Math.sqrt(Math.pow(a, 2)+Math.pow(b, 2)); 
                kalkulator.hasil.value = c;
            }
            function kosong()
            {
                kalkulator.yasid1.focus();
                kalkulator.yasid1.value="";
                kalkulator.yasid2.value="";
                kalkulator.hasil.value="";
            }

        
            
        </script>
    

