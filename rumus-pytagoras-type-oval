        <script type="text/JavaScript">
            function Pytagoras()
            {
                a=eval(kalkulator.yasid1.value);
                b=eval(kalkulator.yasid2.value);
                c=Math.sqrt(Math.pow(a, 2)+Math.pow(b, 2)); 
                kalkulator.hasil.value = c;
            }
